<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dendi.esportarena.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/ae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Add Event"
            android:textColor="#000"
            android:textSize="22dp" />


        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ae"
            android:layout_marginTop="20dp"
            android:hint="Title" />

        <EditText
            android:id="@+id/date_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_et"
            android:layout_marginTop="20dp"
            android:hint="Date" />

        <EditText
            android:id="@+id/desc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_et"
            android:layout_marginTop="20dp"
            android:hint="Description" />

        <Button
            android:id="@+id/date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_et"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/date_et"
            android:text="Pick" />

        <EditText
            android:id="@+id/link_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_et"
            android:layout_marginTop="20dp"
            android:hint="Link Registration" />

        <EditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link_et"
            android:layout_marginTop="20dp"
            android:hint="Location E.g Gedung PKKH UGM" />

        <Button
            android:id="@+id/choose_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_et"
            android:layout_toRightOf="@+id/photo"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="8dp"
            android:text="choose" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/location_et"
            android:src="@drawable/photo" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/location_et"
            android:layout_gravity="center"
            android:background="@drawable/rounded_editext"
            android:backgroundTint="#ff5722"
            android:text="Save"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>
